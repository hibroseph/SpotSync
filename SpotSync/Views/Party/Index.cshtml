@using SpotSync.Models.Shared;
@using SpotSync.Models.Party
@model BaseModel<PartyModel>
@{
    var PartyModel = Model.PageModel;
    ViewData["Title"] = "Index";
}
<script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
<style>
    #is-now-playing-information > p {
        display: inline-block;
    }

    #search-results-container {
        position: absolute;
        top: 45px;
    }

    #search-outline {
        position: relative;
    }

    .hidden {
        display: none;
    }

    table.center {
        margin-left: auto;
        margin-right: auto;
    }

    .card {
        max-width: 650px;
    }

    .spotify-search-results {
        position: absolute;
        width: 100%;
    }

    li:hover {
        background-color: hsl(0, 0%, 96%);
    }

    li {
        padding: 10px;
    }

    .spotify-search-results > .box {
        padding: 0px;
    }

    .is-input-wrapper {
        position: relative;
    }

    .artist {
    }

    .loader {
        height: 40px;
        width: 40px;
    }

    .loader-wrapper {
        display: none;
    }

        .loader-wrapper.is-active {
            display: flex;
            justify-content: center;
            padding: 10px;
        }

    .increment-search-box {
        width: 80%;
    }

    #search-spotify-input {
        transition: width .3s ease-in-out;
        background-color: white;
    }

    .track-view, #suggested-tracks {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }

        .track-view .track-title, #suggested-tracks .track-title {
        }

        .track-view .artist, #suggested-tracks .artist {
            color: #7d7d7d;
        }

    .track-item {
        margin: 3px;
        padding: 10px;
        display: flex;
        flex-direction: row;
        width: 300px;
        justify-content: space-between
    }

    .track-item:hover {
        background-color: #ececec;
        border-radius: 5px;
    }

    .add-icon {
        display: flex; 
        flex-direction: column; 
        justify-content: center
    }

    .fas.fa-plus{
        padding: 10px;
    }

    .fas.fa-plus:hover {
        color: black;
    }

</style>

<section class="section">
    <div class="columns">
        <div class="column">
            <div class="box">
                <h1 class="title">Now Playing</h1>
                <div id="now-playing-container" class="hidden">
                    <div style="overflow:hidden">
                        <div class="is-flex is-justify-content-center">
                            <img style="max-width:340px; width: auto; height: auto;" id="albumArt" src="" />
                            <div class="is-flex is-flex-direction-column is-justify-content-center">
                                <div class="p-3" id="is-now-playing-information">
                                    <strong>Title: </strong><p id="track"></p>
                                    <br />
                                    <strong>Artist: </strong><p id="artist"></p>
                                    <p id="album"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="now-playing-loader" class="loader-wrapper is-active">
                    <div class="loader is-loading"></div>
                </div>
                <div id="no-songs-playing-container" class="hidden">
                    <h2 class="subtitle">There are no songs currently playing in this party</h2>
                    <div class="is-flex is-justify-content-center is-align-items-center">
                        <button id="generate-playlist-button" class="button is-primary mr-5">Generate Playlist</button>
                        <p>Or search a song below to add</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="box">
                <h1 class="title">Listeners</h1>
                <div id="listeners"></div>
            </div>
            <div class="box">
                <h1 class="title">Controls</h1>
                <p>Party Code: <strong>@PartyModel.PartyCode</strong></p>
                <div class="container">
                    <button class="button is-primary" onclick="Spotibro.SyncMusicForUser()">Sync Music</button>
                    <a class="button is-danger" href="/party/leaveparty?partyCode=@PartyModel.PartyCode">Leave Party</a>
                </div>
            </div>
        </div>
    </div>
    <div id="search-outline" class="pb-4">
        <div class="">
            <input id="search-spotify-input" class="input" type="text" placeholder="Search for Tracks, Artists, Albums to Add to Queue" />
        </div>
        <div id="search-results-container" class="box hidden">
            <b>Suggested Tracks</b>
            <div id="suggested-search-loader" class="loader-wrapper is-active">
                <div class="loader is-loading"></div>
            </div>
            <div id="suggested-tracks">

            </div>
            <div id="track-search-loader" class="loader-wrapper">
                <div class="loader is-loading"></div>
            </div>
            <div class="hidden" id="search-results">
                <b>Tracks</b>
                <div class="track-view">
                </div>
            </div>
        </div>
    </div>
    <div class="box">
        @if (true)
        {
            <h1 class="subtitle">Queue</h1>
            <table class="table nolines center interactive is-fullwidth" id="queue"></table>
            <div id="queue-loader" class="loader-wrapper is-active">
                <div class="loader is-loading"></div>
            </div>
            <div id="no-queue" class="hidden">
                <div class="is-flex is-justify-content-center">
                    <h2 class="subtitle">There is no queue. Search a track, artist, or album above to add it to the queue.</h2>
                </div>
            </div>
        }
        else
        {
            <div>
                <div style="display: flex; justify-content: space-between">
                    <div id="is-search-spotify-wrapper" class="is-input-wrapper">
                        <input autocomplete=off id="search-spotify-input" class="input" type="text" placeholder="Search Spotify for Music to Add" />
                        <div class="spotify-search-results">
                            <div class="box">
                                <ul id="results">
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>
    <div class="container pt-2" style="z-index: -1">
        <div class="box">
            <div>
                <h1 class="subtitle">History</h1>
                <table class="table center nolines is-fullwidth" id="history"></table>
                <div id="history-loader" class="loader-wrapper is-active">
                    <div class="loader is-loading"></div>
                </div>
                <div id="no-history" class="hidden">
                    <div class="is-flex is-justify-content-center">
                        <h2 class="subtitle">There is no history.</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal">
    <div class="modal-background"></div>
    <div class="card">
        <header class="card-header">
            <p id="card-header" class="card-header-title">
            </p>
        </header>
        <div class="card-content">
            <div id="card-content" class="content">
            </div>
        </div>
        <footer id="card-footer" class="card-footer">
            
        </footer>
    </div>
</div>

